<html lang="de">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Team-Checklist — Minecraft</title>
  <style>
    :root{--bg:#f7f8fb;--card:#ffffff;--muted:#666}
    body{font-family:Inter,system-ui,Segoe UI,Arial;margin:24px;background:var(--bg);color:#111}
    .container{max-width:960px;margin:0 auto}
    .card{background:var(--card);padding:18px;border-radius:12px;box-shadow:0 6px 18px rgba(20,20,50,.06);margin-bottom:12px}
    header{display:flex;justify-content:space-between;align-items:center;margin-bottom:14px}
    h1{font-size:20px;margin:0}
    .task{display:flex;gap:12px;align-items:center;padding:10px;border-radius:10px;border:1px solid rgba(0,0,0,0.04);margin-bottom:8px}
    .task img{width:96px;height:64px;object-fit:cover;border-radius:6px}
    .task .meta{flex:1}
    .checkbox{width:20px;height:20px}
    .done{opacity:.5;text-decoration:line-through}
    .controls{display:flex;gap:8px}
    .btn{padding:8px 12px;border-radius:8px;border:1px solid #e6e9ef;background:#fff;cursor:pointer}
    footer{font-size:12px;color:var(--muted);margin-top:12px}
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <header>
        <h1>Minecraft Team — Checkliste</h1>
        <div class="controls">
          <button class="btn" onclick="toggleHideDone()">Erledigte ausblenden</button>
          <button class="btn" onclick="resetAll()">Zurücksetzen</button>
        </div>
      </header>

      <div id="list"></div>
      <template id="tpl">
        <div class="task">
          <input type="checkbox" class="checkbox">
          <div class="meta">
            <div class="title"></div>
            <div class="desc" style="font-size:13px;color:var(--muted)"></div>
          </div>
          <img src="" alt="Bild">
        </div>
      </template>

      <footer>Hinweis: Die Liste speichert den Status lokal (localStorage). Für zentrale Änderungen Push/PR ins Repo.</footer>
    </div>
  </div>

  <script>
    // --- CONFIG: task array & images ---
    // Ersetzen Sie die Einträge durch Ihre eigenen Aufgaben und Bildpfade (images/<dateiname>.jpg)
    const tasks = [
      {title:"Spawn bauen", desc:"Spawnplatz markieren und Fundament legen", img:"images/spawn.jpg", done:false},
      {title:"Shop-Straße beschildern", desc:"Schilder kontrollieren und anbringen", img:"images/shop.jpg", done:false},
      {title:"Farm testen", desc:"Automatisierung pruefen", img:"images/farm.jpg", done:false}
    ];

    // --- App ---
    const list = document.getElementById('list');
    const tpl = document.getElementById('tpl').content;
    let hideDone = false;

    function render(){
      list.innerHTML='';
      tasks.forEach((t,i)=>{
        if(hideDone && t.done) return;
        const el = document.importNode(tpl,true);
        el.querySelector('.title').textContent = (i+1)+'. '+t.title;
        el.querySelector('.desc').textContent = t.desc;
        el.querySelector('img').src = t.img;
        const taskDiv = el.querySelector('.task');
        const cb = el.querySelector('input[type=checkbox]');
        cb.checked = !!t.done;
        if(t.done) taskDiv.classList.add('done');
        cb.addEventListener('change', e=>{
          t.done = e.target.checked;
          if(t.done) taskDiv.classList.add('done'); else taskDiv.classList.remove('done');
          save();
        });
        list.appendChild(el);
      });
    }

    // --- Persistenz ---
    function save(){ localStorage.setItem('mc_tasks_v1', JSON.stringify(tasks)); }
    function load(){
      const saved = localStorage.getItem('mc_tasks_v1');
      if(saved){
        try{ const s = JSON.parse(saved); for(let i=0;i<tasks.length && i<s.length;i++){ tasks[i].done = !!s[i].done } } catch(e){console.warn('Saved parse error',e)}
      }
    }

    function toggleHideDone(){ hideDone = !hideDone; render(); }
    function resetAll(){ localStorage.removeItem('mc_tasks_v1'); tasks.forEach(t=>t.done=false); render(); }

    // --- Init ---
    load(); render();
  </script>
</body>
</html>
